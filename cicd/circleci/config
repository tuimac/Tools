version: 2.1
executors:
  awscli:
    docker:
      - image: amazon/aws-cli
jobs:
  build_images:
    machine: true
    steps:
      - checkout
      - restore_cache:
          name: Restore image cache
          key: docker-{{ checksum ".circleci/config.yml" }}
          paths: ~/caches/images.tar
      - run:
          name: Install docker compose
          command: |
            sudo curl -L "https://github.com/docker/compose/releases/download/1.27.4/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
            sudo chmod +x /usr/local/bin/docker-compose
      - run:
          name: Build images
          command: |
            git clone https://github.com/Shinichi1125/pictionary_v2.1.git
            cd pictionary_v2.1
            set -x
            docker-compose build
            mkdir -p ~/caches
            docker save $(docker images --format '{{.Repository}}' | grep ${DOCKER_USER}) -o ~/caches/images.tar
      - save_cache:
          name: Save image cache
          key: docker-{{ checksum ".circleci/config.yml" }}
          paths: ~/caches/images.tar
  test_service:
    machine: true
    steps:
      - checkout
      - restore_cache:
          name: Restore image cache
          key: docker-{{ checksum ".circleci/config.yml" }}
          paths: ~/caches/images.tar
      - run:
          name: Load images
          command: docker load -i ~/caches/images.tar
      - run:
          name: Install docker compose
          command: |
            sudo curl -L "https://github.com/docker/compose/releases/download/1.27.4/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
            sudo chmod +x /usr/local/bin/docker-compose
      - run:
          name: Start containers
          command: |
            git clone https://github.com/Shinichi1125/pictionary_v2.1.git
            cd pictionary_v2.1
            set -x
            docker-compose up -d
      - run:
          name: Integration test - Access landing page
          command: |
            conunt=1
            for i in {0..10}; do
              curl http://localhost
              [[ $? -eq 0 ]] && exit 0
              sleep 3
            done
            exit 1
  push_images:
    machine: true
    steps:
      - checkout
      - restore_cache:
          name: Restore image cache
          key: docker-{{ checksum ".circleci/config.yml" }}
          paths: ~/caches/images.tar
      - run:
          name: Load images
          command: docker load -i ~/caches/images.tar
      - run:
          name: Install docker compose
          command: |
            sudo curl -L "https://github.com/docker/compose/releases/download/1.27.4/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
            sudo chmod +x /usr/local/bin/docker-compose
      - run:
          name: Push images
          command: |
            echo ${DOCKER_PASS} | docker login -u ${DOCKER_USER} --password-stdin
            git clone https://github.com/Shinichi1125/pictionary_v2.1.git
            cd pictionary_v2.1
            set -x
            docker-compose push
  deploy:
    executor: awscli
    steps:
      - run:
          name: Deploy containers
          command: |
            aws ssm send-command \
              --targets Key=tag:Deploy,Values=production \
              --document-name 'AWS-RunShellScript' \
              --parameters 'commands=/home/ec2-user/test/deploy.sh '${DOCKER_USER}' '${AWS_SNS_TOPIC_ARN}
workflows:
  version: 2.1
  build-test-push-deploy:
    jobs:
      - build_images
      - test_service:
          requires:
            - build_images
      - push_images:
          requires:
            - test_service
